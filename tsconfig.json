{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"isolatedModules": true,
		"outDir": "dist",
		"removeComments": true,
		"sourceMap": false
	},
	"include": ["lib/**/*.ts", "rollup.config.ts"]
}
